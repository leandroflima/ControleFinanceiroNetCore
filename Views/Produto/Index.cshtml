@model List<ControleFinanceiroNetCore.Models.Produto>

@{
    ViewData["Title"] = "Produtos";
}

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <table class="table">
                <thead>
                    <tr>
                        <th>Código</th>
                        <th>Descrição</th>
                        <th>Pontos</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Codigo)</td>
                            <td>@Html.DisplayFor(modelItem => item.Descricao)</td>
                            <td>@Html.DisplayFor(modelItem => item.Pontos)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </form>
        <input type="submit" value="Adicionar" class="btn btn-primary" />
    </div>
</div>
